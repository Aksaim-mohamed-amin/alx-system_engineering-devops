# Install Nginx web server and configure it

# Install Nginx package
package { 'nginx':
  ensure => installed,
}

# Ensure Nginx service is enabled and running
service { 'nginx':
  ensure  => running,
  enable  => true,
  require => Package['nginx'],
}

# Configure Nginx server
file_line { 'add http header':
  path    => 
  require => Package['nginx'],
  notify  => Service['nginx'],
}
